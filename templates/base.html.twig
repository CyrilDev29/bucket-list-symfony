<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}Bucket-List{% endblock %}</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Favicon -->
    <link rel="icon" type="image/x-icon" href="{{ asset('img/favicon.png') }}">

    <!-- CSS personnalisé -->
    <link rel="stylesheet" href="{{ asset('styles/app.css') }}">
</head>
<body>
<!-- En-tête -->
<header class="bg-light py-3">
    <div class="container">
        <div class="d-flex align-items-center">
            <a href="{{ path('main_home') }}" class="d-flex align-items-center text-decoration-none text-dark">
                <img src="{{ asset('img/logo.png') }}" alt="Logo" class="me-3" style="height: 40px;">
                <h1 class="h3 mb-0">Bucket-List</h1>
            </a>
        </div>
    </div>
</header>

<!-- Menu de navigation -->
<nav class="navbar navbar-expand-lg navbar-dark bg-success">
    <div class="container">
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('main_home') }}">Accueil</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('main_about') }}">About us</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('wish_list') }}">Wishes</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('wish_create') }}">Ajouter un souhait</a>
                </li>
            </ul>
        </div>
    </div>
</nav>

<!-- Contenu principal -->
<main class="container my-4">
    {# AJOUT DES MESSAGES FLASH GLOBAUX - ILS S'AFFICHENT SUR TOUTES LES PAGES #}
    {% for message in app.flashes('success') %}
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            {{ message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    {% endfor %}

    {% for message in app.flashes('error') %}
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            {{ message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    {% endfor %}

    {% for message in app.flashes('warning') %}
        <div class="alert alert-warning alert-dismissible fade show" role="alert">
            {{ message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    {% endfor %}

    {% for message in app.flashes('info') %}
        <div class="alert alert-info alert-dismissible fade show" role="alert">
            {{ message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    {% endfor %}

    {# Le contenu spécifique de chaque page s'affiche ici #}
    {% block body %}{% endblock %}
</main>

<!-- Pied de page -->
<footer class="bg-light py-3 mt-auto">
    <div class="container text-center">
        <p class="mb-0">©Bucket-List {{ "now"|date("Y") }}</p>
    </div>
</footer>

<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>