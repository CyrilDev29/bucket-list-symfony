{% extends 'base.html.twig' %}

{% block title %}Ajouter un souhait - Bucket-List{% endblock %}

{% block body %}
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title mb-0">Ajouter votre souhait</h3>
                </div>
                <div class="card-body">
                    {# Messages flash supprim√©s d'ici - maintenant dans base.html.twig #}

                    {# Afficher le formulaire #}
                    {{ form_start(wishForm) }}

                    <div class="mb-3">
                        {{ form_label(wishForm.title) }}
                        {{ form_widget(wishForm.title) }}
                        {{ form_errors(wishForm.title) }}
                    </div>

                    <div class="mb-3">
                        {{ form_label(wishForm.description) }}
                        {{ form_widget(wishForm.description) }}
                        {{ form_errors(wishForm.description) }}
                    </div>

                    <div class="mb-3">
                        {{ form_label(wishForm.author) }}
                        {{ form_widget(wishForm.author) }}
                        {{ form_errors(wishForm.author) }}
                    </div>

                    <div class="mb-3 form-check">
                        {{ form_widget(wishForm.isPublished) }}
                        {{ form_label(wishForm.isPublished) }}
                        {{ form_errors(wishForm.isPublished) }}
                    </div>

                    <div class="d-flex justify-content-between">
                        {{ form_widget(wishForm.save) }}
                        <a href="{{ path('wish_list') }}" class="btn btn-secondary">Annuler</a>
                    </div>

                    {{ form_end(wishForm) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}