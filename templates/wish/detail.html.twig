{% extends 'base.html.twig' %}

{% block title %}{{ wish.title }} - Bucket-List{% endblock %}

{% block body %}
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    <h2 class="card-title">{{ wish.title }}</h2>

                    <p class="text-muted mb-3">
                        Par <strong>{{ wish.author }}</strong> - Créé le {{ wish.dateCreated|date('d/m/Y à H:i') }}
                    </p>

                    {% if wish.description %}
                        <div class="card-text">
                            <p>{{ wish.description }}</p>
                        </div>
                    {% endif %}

                    <div class="mt-4 d-flex gap-2">
                        <a href="{{ path('wish_list') }}" class="btn btn-secondary">← Retour à la liste</a>

                        {# NOUVEAU : Bouton de suppression avec token CSRF #}
                        <a href="{{ path('wish_delete', {'id': wish.id, 'token': csrf_token('delete' ~ wish.id)}) }}"
                           class="btn btn-danger"
                           onclick="return confirm('Êtes-vous sûr de vouloir supprimer ce souhait ?')">
                            Supprimer
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}